<!-- snippets/onboarding-featured-blog.liquid -->
<div class="grid-uniform helper">
  {% for i in (1..section.settings.post_limit) %}
    <div class="grid-item {{ width }}">
      <div class="featured-blog__post{% if section.settings.post_limit == 1 and section.settings.blog_show_image == false %} text-center{% endif %}">
        {% if section.settings.blog_show_image %}
          <div class="article__featured-link" href="{{ article.url }}">
            {% capture current %}{% cycle 1, 2, 3, 4, 5, 6 %}{% endcapture %}
            {{ 'collection-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {% endif %}
        <div class="featured-blog__post-inner">
          <h2 class="h4 featured-blog__title">{{ 'home_page.onboarding.blog_title' | t }}</h2>
          {% if section.settings.blog_show_excerpt %}
            <div class="rte rte--indented-images">
               {{ 'home_page.onboarding.blog_excerpt' | t }}
            </div>
          {% endif %}
           <p class="blog-post read-more"><a href="#">{{ 'blogs.article.read_more' | t }} <span class="icon icon-chevron-right" aria-hidden="true"></span></a></p>
        </div>
      </div>
    </div>
  {% endfor %}
</div>